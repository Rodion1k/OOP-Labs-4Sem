<Window x:Class="LP_Lab10.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LP_Lab10"
        mc:Ignorable="d"
        Title="AddWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Height="30" Background="Bisque" Orientation="Horizontal" >
            <RadioButton x:Name="RadioButtonStudent" IsChecked="True" Content="Student" Margin="5" Click="RadioButton_OnClick"/>
            <RadioButton x:Name="RadioButtonTeacher" Content="Teacher" Margin="5" Click="RadioButton_OnClick"/>
            <RadioButton x:Name="RadioButtonSubject" Content="Subject" Margin="5" Click="RadioButton_OnClick"/>
        </StackPanel>
        <Frame Grid.Row="1"  x:Name="AddFrame" />
    </Grid>
</Window>
