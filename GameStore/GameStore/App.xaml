<Application x:Class="GameStore.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameStore"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ThemeDark.xaml"/>
                <ResourceDictionary Source="Resources/lang.en-US.xaml" />
                <ResourceDictionary Source="Resources/ToolbarButton.xaml"/>
                <ResourceDictionary Source="Resources/MainWindowMenuButton.xaml"/>
                <ResourceDictionary Source="Resources/Button.xaml"/>
                <ResourceDictionary Source="CustomControls/CustomText.xaml"/>
                </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
